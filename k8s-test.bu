variant: fcos
version: 1.5.0
storage:
  disks:
    - device: /dev/vdb
      wipe_table: true
      partitions:
        - number: 1
          label: backup
    - device: /dev/vdc
      wipe_table: true
      partitions:
        - number: 1
          label: media
  filesystems:
    - path: /var/backup
      device: /dev/disk/by-partlabel/backup
      format: xfs
    - path: /var/media
      device: /dev/disk/by-partlabel/media
      format: xfs
